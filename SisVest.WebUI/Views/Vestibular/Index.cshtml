  grid.Column("DataFim", header: "Fim da prova", format: (item) => string.Format("{0:dd-MMM-yyyy}", item.DataFim)),

  grid.Column("DataProva", header: "Data da Prova", format: (item) => string.Format("{0:dd-MMM-yyyy}", item.DataProva)),
  
  grid.Column(header: "   ", format: (item) => Html.ActionLink("Editar", "Edit", new { idVestibular = item.id }), canSort: true),
  
  grid.Column(header: "   ", format: (item) => Html.ActionLink("Excluir", "Delete", new { idVestibular = item.id }), canSort: true)
                      
                                )
